{
  "dashboard": {
    "id": null,
    "uid": "api-service-overview",
    "title": "API Service Overview",
    "tags": ["api", "production", "sre"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "7d", "30d"]
    },
    "templating": {
      "list": [
        {
          "name": "env",
          "type": "query",
          "label": "Environment",
          "query": "label_values(up, env)",
          "datasource": "Prometheus",
          "multi": false,
          "includeAll": false,
          "allValue": ".*",
          "current": {
            "text": "production",
            "value": "production"
          }
        },
        {
          "name": "service",
          "type": "query",
          "label": "Service",
          "query": "label_values(up{env=\"$env\"}, job)",
          "datasource": "Prometheus",
          "multi": true,
          "includeAll": true,
          "allValue": ".*",
          "current": {
            "text": "All",
            "value": ["$__all"]
          }
        },
        {
          "name": "instance",
          "type": "query",
          "label": "Instance",
          "query": "label_values(up{job=~\"$service\"}, instance)",
          "datasource": "Prometheus",
          "multi": true,
          "includeAll": true,
          "allValue": ".*"
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "changes(kube_deployment_status_observed_generation{namespace=~\"$env\"}[5m]) > 0",
          "iconColor": "blue",
          "tagKeys": "deployment"
        },
        {
          "name": "Alerts",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\"}",
          "iconColor": "red",
          "tagKeys": "alertname"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "graph",
        "title": "Request Rate",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=~\"$service\"}[5m])) by (status)",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec", "logBase": 1, "show": true},
          {"format": "short", "logBase": 1, "show": false}
        ],
        "xaxis": {"show": true, "mode": "time"},
        "legend": {"show": true, "alignAsTable": true, "avg": true, "current": true, "max": true},
        "tooltip": {"shared": true, "sort": 0, "value_type": "individual"}
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "graph",
        "title": "Error Rate",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=~\"$service\",status=~\"5..\"}[5m])) / sum(rate(http_requests_total{job=~\"$service\"}[5m])) * 100",
            "legendFormat": "Error Rate %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Error Rate", "logBase": 1, "show": true, "min": 0},
          {"format": "short", "logBase": 1, "show": false}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [5], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "Error Rate Alert",
          "noDataState": "no_data",
          "notifications": []
        },
        "thresholds": [
          {"value": 1, "colorMode": "custom", "op": "gt", "fill": true, "line": true, "fillColor": "rgba(255, 152, 48, 0.2)", "lineColor": "rgb(255, 152, 48)"},
          {"value": 5, "colorMode": "custom", "op": "gt", "fill": true, "line": true, "fillColor": "rgba(237, 129, 40, 0.2)", "lineColor": "rgb(237, 40, 40)"}
        ]
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "type": "graph",
        "title": "Latency Percentiles",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=~\"$service\"}[5m])) by (le))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.90, sum(rate(http_request_duration_seconds_bucket{job=~\"$service\"}[5m])) by (le))",
            "legendFormat": "p90",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=~\"$service\"}[5m])) by (le))",
            "legendFormat": "p95",
            "refId": "C"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=~\"$service\"}[5m])) by (le))",
            "legendFormat": "p99",
            "refId": "D"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration", "logBase": 1, "show": true},
          {"format": "short", "logBase": 1, "show": false}
        ],
        "thresholds": [
          {"value": 0.2, "colorMode": "custom", "op": "gt", "fill": false, "line": true, "lineColor": "rgba(255, 152, 48, 0.8)"},
          {"value": 1.0, "colorMode": "custom", "op": "gt", "fill": false, "line": true, "lineColor": "rgba(237, 40, 40, 0.8)"}
        ]
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "type": "graph",
        "title": "CPU Usage",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{pod=~\"$service.*\"}[5m])) by (pod)",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "label": "CPU Cores", "logBase": 1, "show": true},
          {"format": "short", "logBase": 1, "show": false}
        ]
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "type": "graph",
        "title": "Memory Usage",
        "targets": [
          {
            "expr": "sum(container_memory_working_set_bytes{pod=~\"$service.*\"}) by (pod)",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Memory", "logBase": 1, "show": true},
          {"format": "short", "logBase": 1, "show": false}
        ]
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "type": "graph",
        "title": "Network I/O",
        "targets": [
          {
            "expr": "sum(rate(container_network_receive_bytes_total{pod=~\"$service.*\"}[5m])) by (pod)",
            "legendFormat": "{{pod}} - Receive",
            "refId": "A"
          },
          {
            "expr": "sum(rate(container_network_transmit_bytes_total{pod=~\"$service.*\"}[5m])) by (pod)",
            "legendFormat": "{{pod}} - Transmit",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "Bps", "label": "Bytes/sec", "logBase": 1, "show": true},
          {"format": "short", "logBase": 1, "show": false}
        ]
      },
      {
        "id": 7,
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 24},
        "type": "stat",
        "title": "Uptime",
        "targets": [
          {
            "expr": "avg(up{job=~\"$service\"})",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"]},
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 0.99, "color": "yellow"},
                {"value": 0.999, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 24},
        "type": "stat",
        "title": "Avg Response Time",
        "targets": [
          {
            "expr": "sum(rate(http_request_duration_seconds_sum{job=~\"$service\"}[5m])) / sum(rate(http_request_duration_seconds_count{job=~\"$service\"}[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"]},
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 0.2, "color": "yellow"},
                {"value": 1.0, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 24},
        "type": "stat",
        "title": "Total Requests (5m)",
        "targets": [
          {
            "expr": "sum(increase(http_requests_total{job=~\"$service\"}[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"]},
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "blue"}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 24},
        "type": "stat",
        "title": "Error Count (5m)",
        "targets": [
          {
            "expr": "sum(increase(http_requests_total{job=~\"$service\",status=~\"5..\"}[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"]},
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 11,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 28},
        "type": "table",
        "title": "Top Endpoints by Request Count",
        "targets": [
          {
            "expr": "topk(10, sum(rate(http_requests_total{job=~\"$service\"}[5m])) by (endpoint))",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [{"displayName": "Value", "desc": true}]
        },
        "fieldConfig": {
          "defaults": {
            "custom": {"align": "auto", "displayMode": "auto"},
            "unit": "reqps"
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "endpoint"},
              "properties": [
                {"id": "custom.width", "value": 400}
              ]
            }
          ]
        }
      }
    ]
  }
}
