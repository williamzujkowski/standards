{
  "dashboard": {
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "changes(kube_deployment_status_observed_generation{namespace=~\"$env\"}[5m]) > 0",
          "iconColor": "blue",
          "name": "Deployments",
          "tagKeys": "deployment"
        },
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\"}",
          "iconColor": "red",
          "name": "Alerts",
          "tagKeys": "alertname"
        }
      ]
    },
    "id": null,
    "panels": [
      {
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "id": 1,
        "legend": {
          "alignAsTable": true,
          "avg": true,
          "current": true,
          "max": true,
          "show": true
        },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=~\"$service\"}[5m])) by (status)",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "title": "Request Rate",
        "tooltip": {
          "shared": true,
          "sort": 0,
          "value_type": "individual"
        },
        "type": "graph",
        "xaxis": {
          "mode": "time",
          "show": true
        },
        "yaxes": [
          {
            "format": "reqps",
            "label": "Requests/sec",
            "logBase": 1,
            "show": true
          },
          {
            "format": "short",
            "logBase": 1,
            "show": false
          }
        ]
      },
      {
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [
                  5
                ],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": [
                  "A",
                  "5m",
                  "now"
                ]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "Error Rate Alert",
          "noDataState": "no_data",
          "notifications": []
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "id": 2,
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=~\"$service\",status=~\"5..\"}[5m])) / sum(rate(http_requests_total{job=~\"$service\"}[5m])) * 100",
            "legendFormat": "Error Rate %",
            "refId": "A"
          }
        ],
        "thresholds": [
          {
            "colorMode": "custom",
            "fill": true,
            "fillColor": "rgba(255, 152, 48, 0.2)",
            "line": true,
            "lineColor": "rgb(255, 152, 48)",
            "op": "gt",
            "value": 1
          },
          {
            "colorMode": "custom",
            "fill": true,
            "fillColor": "rgba(237, 129, 40, 0.2)",
            "line": true,
            "lineColor": "rgb(237, 40, 40)",
            "op": "gt",
            "value": 5
          }
        ],
        "title": "Error Rate",
        "type": "graph",
        "yaxes": [
          {
            "format": "percent",
            "label": "Error Rate",
            "logBase": 1,
            "min": 0,
            "show": true
          },
          {
            "format": "short",
            "logBase": 1,
            "show": false
          }
        ]
      },
      {
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "id": 3,
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=~\"$service\"}[5m])) by (le))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.90, sum(rate(http_request_duration_seconds_bucket{job=~\"$service\"}[5m])) by (le))",
            "legendFormat": "p90",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=~\"$service\"}[5m])) by (le))",
            "legendFormat": "p95",
            "refId": "C"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=~\"$service\"}[5m])) by (le))",
            "legendFormat": "p99",
            "refId": "D"
          }
        ],
        "thresholds": [
          {
            "colorMode": "custom",
            "fill": false,
            "line": true,
            "lineColor": "rgba(255, 152, 48, 0.8)",
            "op": "gt",
            "value": 0.2
          },
          {
            "colorMode": "custom",
            "fill": false,
            "line": true,
            "lineColor": "rgba(237, 40, 40, 0.8)",
            "op": "gt",
            "value": 1.0
          }
        ],
        "title": "Latency Percentiles",
        "type": "graph",
        "yaxes": [
          {
            "format": "s",
            "label": "Duration",
            "logBase": 1,
            "show": true
          },
          {
            "format": "short",
            "logBase": 1,
            "show": false
          }
        ]
      },
      {
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "id": 4,
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{pod=~\"$service.*\"}[5m])) by (pod)",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "title": "CPU Usage",
        "type": "graph",
        "yaxes": [
          {
            "format": "percentunit",
            "label": "CPU Cores",
            "logBase": 1,
            "show": true
          },
          {
            "format": "short",
            "logBase": 1,
            "show": false
          }
        ]
      },
      {
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "id": 5,
        "targets": [
          {
            "expr": "sum(container_memory_working_set_bytes{pod=~\"$service.*\"}) by (pod)",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "title": "Memory Usage",
        "type": "graph",
        "yaxes": [
          {
            "format": "bytes",
            "label": "Memory",
            "logBase": 1,
            "show": true
          },
          {
            "format": "short",
            "logBase": 1,
            "show": false
          }
        ]
      },
      {
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "id": 6,
        "targets": [
          {
            "expr": "sum(rate(container_network_receive_bytes_total{pod=~\"$service.*\"}[5m])) by (pod)",
            "legendFormat": "{{pod}} - Receive",
            "refId": "A"
          },
          {
            "expr": "sum(rate(container_network_transmit_bytes_total{pod=~\"$service.*\"}[5m])) by (pod)",
            "legendFormat": "{{pod}} - Transmit",
            "refId": "B"
          }
        ],
        "title": "Network I/O",
        "type": "graph",
        "yaxes": [
          {
            "format": "Bps",
            "label": "Bytes/sec",
            "logBase": 1,
            "show": true
          },
          {
            "format": "short",
            "logBase": 1,
            "show": false
          }
        ]
      },
      {
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.99
                },
                {
                  "color": "green",
                  "value": 0.999
                }
              ]
            },
            "unit": "percentunit"
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 24
        },
        "id": 7,
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": [
              "lastNotNull"
            ],
            "values": false
          },
          "textMode": "value_and_name"
        },
        "targets": [
          {
            "expr": "avg(up{job=~\"$service\"})",
            "refId": "A"
          }
        ],
        "title": "Uptime",
        "type": "stat"
      },
      {
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.2
                },
                {
                  "color": "red",
                  "value": 1.0
                }
              ]
            },
            "unit": "s"
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 24
        },
        "id": 8,
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "reduceOptions": {
            "calcs": [
              "lastNotNull"
            ],
            "values": false
          },
          "textMode": "value_and_name"
        },
        "targets": [
          {
            "expr": "sum(rate(http_request_duration_seconds_sum{job=~\"$service\"}[5m])) / sum(rate(http_request_duration_seconds_count{job=~\"$service\"}[5m]))",
            "refId": "A"
          }
        ],
        "title": "Avg Response Time",
        "type": "stat"
      },
      {
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "blue",
                  "value": null
                }
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 24
        },
        "id": 9,
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "reduceOptions": {
            "calcs": [
              "lastNotNull"
            ],
            "values": false
          },
          "textMode": "value_and_name"
        },
        "targets": [
          {
            "expr": "sum(increase(http_requests_total{job=~\"$service\"}[5m]))",
            "refId": "A"
          }
        ],
        "title": "Total Requests (5m)",
        "type": "stat"
      },
      {
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 10
                },
                {
                  "color": "red",
                  "value": 100
                }
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 24
        },
        "id": 10,
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "reduceOptions": {
            "calcs": [
              "lastNotNull"
            ],
            "values": false
          },
          "textMode": "value_and_name"
        },
        "targets": [
          {
            "expr": "sum(increase(http_requests_total{job=~\"$service\",status=~\"5..\"}[5m]))",
            "refId": "A"
          }
        ],
        "title": "Error Count (5m)",
        "type": "stat"
      },
      {
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            },
            "unit": "reqps"
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "endpoint"
              },
              "properties": [
                {
                  "id": "custom.width",
                  "value": 400
                }
              ]
            }
          ]
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 28
        },
        "id": 11,
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": true,
              "displayName": "Value"
            }
          ]
        },
        "targets": [
          {
            "expr": "topk(10, sum(rate(http_requests_total{job=~\"$service\"}[5m])) by (endpoint))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "title": "Top Endpoints by Request Count",
        "type": "table"
      }
    ],
    "refresh": "30s",
    "schemaVersion": 38,
    "tags": [
      "api",
      "production",
      "sre"
    ],
    "templating": {
      "list": [
        {
          "allValue": ".*",
          "current": {
            "text": "production",
            "value": "production"
          },
          "datasource": "Prometheus",
          "includeAll": false,
          "label": "Environment",
          "multi": false,
          "name": "env",
          "query": "label_values(up, env)",
          "type": "query"
        },
        {
          "allValue": ".*",
          "current": {
            "text": "All",
            "value": [
              "$__all"
            ]
          },
          "datasource": "Prometheus",
          "includeAll": true,
          "label": "Service",
          "multi": true,
          "name": "service",
          "query": "label_values(up{env=\"$env\"}, job)",
          "type": "query"
        },
        {
          "allValue": ".*",
          "datasource": "Prometheus",
          "includeAll": true,
          "label": "Instance",
          "multi": true,
          "name": "instance",
          "query": "label_values(up{job=~\"$service\"}, instance)",
          "type": "query"
        }
      ]
    },
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m"
      ],
      "time_options": [
        "5m",
        "15m",
        "1h",
        "6h",
        "12h",
        "24h",
        "7d",
        "30d"
      ]
    },
    "timezone": "browser",
    "title": "API Service Overview",
    "uid": "api-service-overview",
    "version": 1
  }
}
