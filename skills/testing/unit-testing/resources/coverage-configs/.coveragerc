# Python coverage configuration
[run]
source = src
branch = True
parallel = True
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */site-packages/*
    */venv/*
    */.venv/*
    */.tox/*

[report]
precision = 2
show_missing = True
skip_covered = False
sort = Cover

exclude_lines =
    pragma: no cover
    def __repr__
    def __str__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod

[html]
directory = htmlcov
title = Test Coverage Report

[xml]
output = coverage.xml
